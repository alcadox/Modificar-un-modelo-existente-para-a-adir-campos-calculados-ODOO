<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="action_email_user" model="ir.actions.act_window">
        <field name="name">Usuarios de Correo</field>
        <field name="res_model">email.user</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_email_root" name="Correo"/>

    <menuitem id="menu_email_user"
              name="Usuarios"
              parent="menu_email_root"
              action="action_email_user"/>

    <record id="view_email_user_tree" model="ir.ui.view">
        <field name="name">email.user.list</field>
        <field name="model">email.user</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="email"/>
                <field name="mayor_edad"/> <!-- añadido campo mayor de edad -->
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_email_user_form" model="ir.ui.view">
        <field name="name">email.user.form</field>
        <field name="model">email.user</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Datos del usuario">
                        <field name="name"/>
                        <field name="surname"/> <!-- añadido primer apellido -->
                        <field name="surname2"/> <!-- añadido segundo apellido -->
                        <field name="fecha_nacimiento"/> <!-- añadido fecha de nacimiento -->
                        <field name="edad" readonly="1"/> <!-- añadido edad -->
                        <field name="mayor_edad" readonly="1"/> <!-- añadido mayor de edad -->
                        <field name="email"/>
                        <field name="correo_corporativo" readonly="1"/> <!-- añadido correo corporativo -->
                        <field name="password" password="True"/>
                        <field name="domain"/>
                        <field name="quota"/>
                        <field name="forwarding"/>
                        <field name="active"/>
                    </group>

                    <group string="Notas">
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>